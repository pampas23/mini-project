<h1>"Hello Badminton"</h1>
<table class="table table-striped" >
<tr>Players Name</tr>
<tr>
<% @players.each do |player| %>
	<td><%= player.name %></td>
	<td>
  <%= link_to 'Show' ,  player_path(player) ,:class => "btn btn-info"%>
  <%= link_to 'Edit',  edit_player_path(player),:class => "btn btn-primary" %>
  <%= link_to 'Delete', player_path(player), :method => :delete, :data => { :confirm => "Are you sure?"}, :class => "btn btn-danger" %>
  </td>
  </tr>
<% end %>
</table>


<% @player = Player.new %>
<%= form_for @player, :url =>  players_path, :method => :post  do |f| %>
	<%= render :partial => 'form', :locals => { :f => f } %>

    <%= f.submit "Create"  ,:class => "btn btn-primary"%>
<% end %>

<%= link_to 'New player', new_player_path , :class => "btn btn-success" %>
<%= paginate @players %>